{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  },
  "include": [
    "docs/**/*",
    "docs/.vitepress/**/*",
    "packages/**/*",
    "src/**/*",
    "__tests__/**/*",
    "__mocks__/**/*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
